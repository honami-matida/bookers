<h1>Books</h1>

<table>
  　<thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th conspan="3"></th>
      </tr>
  　</thead>
  　<tbody>
      <tr>
        <% @books.each do |book| %>
        <td><span><%=link_to book.title,book_path(book.id) %></span></td>
        <td><span><%= link_to book.body,book_path(book.id) %></span></td>
        <td>
          <%= link_to "削除",books_destroy_path(book.id), method: :delete, "data-confirm" =>"本当に削除しますか?" %>
        </td>
        <% end %>
      </tr>
  　</tbody>
</table>