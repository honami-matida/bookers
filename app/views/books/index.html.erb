<h1>Books</h1>

<table>
  　<thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th conspan="3"></th>
      </tr>
  　</thead>
  　<tbody>
      <tr>
        <% @books.each do |book| %>
        <td><span><%=link_to book.title,book_path(book.id) %></span></td>
        <td><span><%= link_to book.body,book_path(book.id) %></span></td>
        <td>
          <%= link_to "Destroy",books_destroy_path(book.id), method: :delete, "data-confirm" =>"本当に削除しますか?" %>
          
        </td>
        <% end %>
      </tr>
  　</tbody>
</table>

<div>
  <%#= render 'book', book: @book %>
  <h2>New book</h2>
<!--form_with部分-->
<%= form_with model: @book,  method: :post do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>

<%end%>
</div>